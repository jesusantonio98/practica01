<% var01 = 'npmbre_factura' %>
<div class="container">
	<div class="row" style="border: 1px solid red">
		<div class="col-md-8" style="border: 1px solid blue">
			<%= var01 %>
		</div>
		<div class="col-md-4" style="border: 1px solid blue">
			<%= var01 %>
		</div>
	</div>
</div>


<div class="container">
	<H1>listado de productos</H1>

	<%= link_to "crear nuevo producto", products_new_path %>
	<table class="table table-bordered">
		<tr>
			<thead>
				<th>nombre</th>
				<th>descripcion</th>
				<th>precio</th>
			</thead>
		</tr>

		<% @products.each do |product| %>
		<tr>
			<td><%= product.name %></td>
			<td><%= product.description %></td>
			<td><%= product.price %></td>
			<td>
				<%= link_to "editar", edit_product_path(product) %>
				<%= link_to "eliminar",product, method: :delete, data: { confirm: "deseas eliminar el producto?"}  %>
				</td>
		</tr>
		<% end %>
		
	</table>

	<div class="card card-info">
		<div class="card-header">titulo</div>
		<div class="card-body">cuerpo</div>
		<div class="card-footer">pies</div>
	</div>
</div>